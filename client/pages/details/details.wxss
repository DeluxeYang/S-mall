page{
    height: 100%;
    
}
.details-page{
    height: 100%;
    display: flex;
    flex-direction: column;
    font-family: "Helvetica Neue",Arial,"PingFang SC","Microsoft YaHei",sans-serif;
}
.details{
    flex: 1;
    overflow: hidden
}
.details_pic{
  display: flex;
  justify-content: center;
}
.details_list{
    font-size: 14px;
    color: #000;
}
.details_name{
    font-size: 20px;
}
.details_list ul{
   display: flex;
   flex-direction: column;
}
.details_list li{
    height:80rpx;
    border-bottom: 1px solid #ccc;
}
.details_text{
  display: flex;
  padding: 10px;
  align-items: center;
}
.detail-footer{
    height: 88rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    color: #fff;
    font-size: 14px;
}
.detail-1{
    flex:1;
    opacity: 1;
  
}
.detail-2{
    flex:1;
    opacity: 0;
}
.detail-3{
    flex:1;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #f47920
}
.detail-4{
    flex:1;
    height: 100%;
    display: flex;
     justify-content: center;
    align-items: center;
    background-color: red;
}
.hot-container{
    background: #eee;
}
.hot-title{
    padding: 10px;
    font-size: 16px;
    color: #f55030;
    background: #fff;
}
.hot-imgview{
    margin-top: 10px;
}
.hot-imgview image{
    width: 100%;
    height: 280rpx;
}